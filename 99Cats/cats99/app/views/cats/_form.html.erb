<%action_url = (action == :new) ? cats_url : cat_url(cat)%>
<form action="<%=action_url%>" method="post">
  <% if action == :edit%>
    <input type='hidden' name='_method' value='patch'>
  <% end %>
  <label for="name">Name</label>
  <input type="text" name="cat[name]" id="name" value="<%=cat.name %>">

  <label for='sex'>Sex</label>
  M<input type="radio" name="cat[sex]" value='M' <%= "checked" if cat.sex == 'M'%>>
  F<input type="radio" name="cat[sex]" value='F' <%= "checked" if cat.sex == 'F'%>>

  <label for="color">Color</label>
  <select id = "color" name = "cat[color]">
    <option value="none" selected disabled>Choose a color</option>
    <option value="black" <%= "selected" if cat.color == 'black'%>>Black</option>
    <option value="white" <%= "selected" if cat.color == 'white'%>>White</option>
    <option value="brown" <%= "selected" if cat.color == 'brown'%>>Brown</option>
    <option value="orange" <%= "selected" if cat.color == 'orange'%>>Orange</option>
    <option value="grey" <%= "selected" if cat.color == 'orange'%>>Grey</option>
    <option value="yellow" <%= "selected" if cat.color == 'yellow'%>>Yellow</option>
    <option value="red" <%= "selected" if cat.color == 'red'%>>Red</option>
  </select>

  <label for="birth_date">Birth day</label>
  <input type="date" name="cat[birth_date]" id="birth_date" value="<%=cat.birth_date%>">

  <label for="description">Description</label>
    <textarea name="cat[description]"><%=cat.description%></textarea>
  <input type="submit" value="Submit Cat">
</form>
